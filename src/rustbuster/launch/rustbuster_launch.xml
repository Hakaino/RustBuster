<launch>

  <!-- Launch the robot driver -->


  <!-- Launch the SLAM Toolbox node (2D and 3D) -->
  <!--include file="$(find-pkg-share slam_toolbox)/launch/lifelong_launch.py"/>
  <-node name="slam_toolbox" pkg="slam_toolbox" exec="lifelong_slam_toolbox_node" output="screen">
    <include value="config/mapper_params_lifelong.yaml"/>
  </node-->

  <!-- Launch the mapping node ->
  <node name="mapping_node" pkg="frontier_exploration" exec="explore_server" output="screen">
    <remap from="map" to="/map"/>
    <param name="planner_frequency" value="1.0"/>
    <param name="min_frontier_size" value="0.5"/>
  </node-->

  <!-- Launch Spot driver-->
  <include file="$(find-pkg-share spot_driver)/launch/spot_driver.launch.py">
	<arg name="config_file" value="config/spot_config.yaml"/>
  </include>

  <!-- visualize -->
  <node name="rviz" pkg="rviz" exec="rviz"/>

</launch>
